html 
    head 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css")

    body 
        h1(class="d-md-flex justify-content-md-center", style ='margin-top: 20px') User Listing
        div(class="container-fluid")
            table(class="table table-bordered")
                thead
                    tr
                        th(scoop="col") User ID
                        th(scoop="col") Name 
                        th(scoop="col") Email Address
                        th(scoop="col") Age
                        th(scoop="col") Action
                tbody
                    each user in users
                        tr
                            td=user.userId 
                            td=user.name
                            td=user.email
                            td=user.age
                            td 
                                a(href=`/users/${user.uuid}` type="button" class="btn btn-light btn-small", style='margin-right: 30px') 
                                    i(class="bi bi-pencil")  Edit
                                a(href=`/delete/${user.uuid}` type="button" class="btn btn-light btn-small") 
                                    i(class="bi bi-trash")  Delete
        div(class="d-grid gap-2 d-md-flex justify-content-md-center")
            a(href='/create', type="button", style='margin-top: 30px', class="btn btn-secondary") Add User       